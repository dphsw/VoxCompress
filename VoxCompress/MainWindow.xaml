<Window x:Class="VoxCompress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoxCompress"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="320">
    <Grid Drop="DropEventHandler" >
        <TextBlock x:Name="txtInfo" HorizontalAlignment="Center" Text="Drag VOX/VOZ files here to zip/unzip" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="20" FontWeight="Normal" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" Margin="10,10,10,8">
        </TextBlock>

    </Grid>
</Window>
